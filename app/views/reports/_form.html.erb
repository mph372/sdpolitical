<%= bootstrap_form_for(@report, label_errors: true) do |f| %>


<div class="row">
  <div class="col">
  <%= f.date_field :period_begin %>
  </div>
  <div class="col">
  <%= f.date_field :period_end %>
  </div>
  <div class="col">
  <%= f.date_field :report_filed %>
  </div>
  <div class="col">
  <%= f.select :cycle, ['2018', '2020', '2022'], :selected => '2020' %>
  </div>  
</div>

<div class="row">
  <div class="col">
  <%= f.number_field :period_receipts, step: :any %>
  </div>
  <div class="col">
  <%= f.number_field :period_disbursements, step: :any %>
  </div>
  <div class="col">
  <%= f.number_field :current_coh, step: :any, label: "Cash on Hand" %>
  </div>
  <div class="col">
  <%= f.number_field :current_debt, step: :any, label: "Debt" %>
  </div>
</div>

<%= f.check_box :is_amended, label: "Report is Amended" %>

<div class="row">
  <div class="col">
      <%= f.select(:person_id, Person.all.collect { |v| [ "#{v.last_name}, #{v.first_name}", v.id ] }, {:selected => params[:person_id], :include_blank => true}, label: "Candidate:" ) %>
  </div>
  <div class="col">
      <%= f.select(:committee_id, Committee.all.collect { |v| [ v.name, v.id ] }, {:selected => params[:committee_id], :include_blank => true}, label: "Committee:" ) %>
  </div>
</div>
<br>
<%= f.submit %>
<%end%>
<br>

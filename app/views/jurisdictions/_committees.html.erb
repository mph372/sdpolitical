<div class="row">
    <div class="col">  
    <h5 class="dark-red-supporting heavy">Active Committees Filed with <%= @jurisdiction.name %></h5>

    <div class="panel panel-default">
      <div class="table-responsive shadow-sm bg-white rounded primary-border p-4">
        <table class="table table-sm" id="committees">
          <thead>
            <tr>
              <th class="">Name<br></th>
              <th>Cash-on-Hand</th>
            </tr>
          </thead>

          <tbody>
            <% @jurisdiction.committees.each do |committee| %>
              <tr>
                <td><%= link_to "#{committee.name}", committee %> </td>
                <td><span class="green-text float-right"><% if committee.reports.present? %><%= number_to_currency(committee.reports.order('period_end DESC').first.current_coh ) %><%else%>$0.00<%end%></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
       </div>
      </div>  
    </div>
  </div>
<!-- app/views/elections/_update_stats.html.erb -->
<div class="col">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <i class="bi bi-check-circle-fill text-success fs-4"></i>
    </div>
    <div>
      <div class="text-muted small">Ballots Cast</div>
      <div class="fw-bold"><%= number_with_delimiter(update.ballots_cast) %></div>
    </div>
  </div>
</div>
<div class="col">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <i class="bi bi-envelope-fill text-primary fs-4"></i>
    </div>
    <div>
      <div class="text-muted small">Mail Ballots</div>
      <div class="fw-bold"><%= number_with_delimiter(update.mail_ballots) %></div>
    </div>
  </div>
</div>
<div class="col">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <i class="bi bi-person-fill text-info fs-4"></i>
    </div>
    <div>
      <div class="text-muted small">Vote Center Ballots</div>
      <div class="fw-bold"><%= number_with_delimiter(update.vote_center_ballots) %></div>
    </div>
  </div>
</div>
<div class="col">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <i class="bi bi-people-fill text-secondary fs-4"></i>
    </div>
    <div>
      <div class="text-muted small">Registered Voters</div>
      <div class="fw-bold"><%= number_with_delimiter(update.registered_voters) %></div>
    </div>
  </div>
</div>
<div class="col">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <i class="bi bi-hourglass-split text-warning fs-4"></i>
    </div>
    <div>
      <div class="text-muted small">Ballots Outstanding</div>
      <div class="fw-bold"><%= number_with_delimiter(update.ballots_outstanding) %></div>
    </div>
  </div>
</div>
<div class="col">
  <div>
    <div class="d-flex justify-content-between align-items-center mb-1">
      <div class="text-muted small">Voter Turnout</div>
      <% turnout_percentage = ((update.ballots_cast.to_f / update.registered_voters) * 100).round(1) %>
      <div class="fw-bold"><%= turnout_percentage %>%</div>
    </div>
    <div class="progress" style="height: 8px;">
      <div 
        class="progress-bar bg-success" 
        role="progressbar" 
        style="width: <%= turnout_percentage %>%;" 
        aria-valuenow="<%= turnout_percentage %>" 
        aria-valuemin="0" 
        aria-valuemax="100">
      </div>
    </div>
  </div>
</div>
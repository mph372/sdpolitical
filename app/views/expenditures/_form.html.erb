
<%= bootstrap_form_for(@expenditure, label_errors: true) do |f| %>


  <div class="form-inputs">
    <div class="row">
      <div class="col">
          <%= f.select(:committee_id, Committee.all.collect { |v| [ v.name, v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Committee" }) %>
      </div>
      <div class="col">
          <%= f.select(:district_id, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.id ] }, {:include_blank => true}, label: "District where expenditure occurred") %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.select(:person_id, Person.all.collect { |v| [ "#{v.first_name} #{v.last_name}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Candidate" }) %>
      </div>
      <div class="col">
        <%= f.select(:measure_id, Measure.all.collect { |v| [ "Measure #{v.letter}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Measure" }) %>
      </div>
      <div class="col">
        <%= f.form_group :support, label: { text: "Support or Oppose" }  do %>
          <%= f.radio_button :is_support,   "Support", :value => "true" %> 
          <%= f.radio_button :is_support,  "Oppose", :value => "false" %> 
        <%end%>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.date_field :expenditure_date %>
      </div>
      <div class="col">
        <%= f.text_field :description %>
      </div>      
      <div class="col">
        <%= f.number_field :amount, step: :any %>
      </div>
    </div>   

    <%= f.check_box :is_amendment %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
<br>

<%= form_with(model: [ @election, @election_update ], local: true, class: "needs-validation", novalidate: "") do |form| %>
<% if @election_update.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@election_update.errors.count, "error") %> prohibited this election update from being saved:</h2>
    <ul>
      <% @election_update.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :ballots_cast, class: "form-label" %>
          <%= form.number_field :ballots_cast, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :mail_ballots, class: "form-label" %>
          <%= form.number_field :mail_ballots, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :vote_center_ballots, class: "form-label" %>
          <%= form.number_field :vote_center_ballots, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :registered_voters, class: "form-label" %>
          <%= form.number_field :registered_voters, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :ballots_outstanding, class: "form-label" %>
          <%= form.number_field :ballots_outstanding, class: "form-control" %>
        </div>

        <div class="actions">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container bg-white shadow-sm border rounded mt-2 p-4">
<%= bootstrap_form_for(@measure, label_errors: true) do |f| %>
<% if @measure.errors.any? %>
    <% @measure.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<div class="row m-2">
  <div class="col-md-3">
    <h5 class="heavy">Measure Information</h5>
  </div>
  <div class="col-md-9"> 
    <div class="row">
      <div class="col">
        <%= f.text_field :letter %>
        <%= f.select :origin, ['Citizens', 'Legislative'], {:include_blank => true} %>
        <%= f.select(:jurisdiction_id, Jurisdiction.all.order(:name).collect { |v| [ "#{v.name}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Jurisdiction" }) %>
        <%= f.select :gop_support, ['Support', 'Oppose', 'No Position'], {:include_blank => true, label: "GOP Support"} %>
      </div>
      <div class="col">
        <%= f.text_field :topic %>
        <%= f.select :measure_type, ['Initiative', 'Referendum'], {:include_blank => true} %>
        <%= f.text_field :threshold %>
        <%= f.select :dem_support, ['Support', 'Oppose', 'No Position'], {:include_blank => true, label: "Dem Support"} %>
      </div>  
    
  </div>
  <%= f.text_area :text %>  
  <%= f.file_field :pdf, { label: "Upload Text" } %>
  <%= f.submit %>
  <br><br>
<%= link_to 'Back', measures_path, :class => "btn btn-outline-primary" %>
</div>    




<% end %>

</div>
<p id="notice"><%= notice %></p>

<h1>Measures</h1>

<table>
  <thead>
    <tr>
      <th>Letter</th>
      <th>Text</th>
      <th>Topic</th>
      <th>Type</th>
      <th>Origin</th>
      <th>Jurisdiction</th>
      <th>Threshold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.letter %></td>
        <td><%= measure.text %></td>
        <td><%= measure.topic %></td>
        <td><%= measure.type %></td>
        <td><%= measure.origin %></td>
        <td><%= measure.jurisdiction %></td>
        <td><%= measure.threshold %></td>
        <td><%= link_to 'Show', measure %></td>
        <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
        <td><%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


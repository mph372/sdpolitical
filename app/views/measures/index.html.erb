<p id="notice"><%= notice %></p>

<h1>Measures</h1>
<br>
<table class="table small-table table-bordered table-sm table-hover">
  <thead class="thead-light">
    <tr>
      <th>Letter</th>
      <th>Topic</th>
      <th>Type</th>
      <th>Origin</th>
      <th>Jurisdiction</th>
      <th>Threshold</th>
    </tr>
  </thead>

  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= link_to "Measure #{measure.letter}", measure %></td>
        <td><%= measure.topic %></td>
        <td><%= measure.measure_type %></td>
        <td><%= measure.origin %></td>
        <td><%= measure.jurisdiction.name %></td>
        <td><%= number_to_percentage(measure.threshold, precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Measure', new_measure_path %>

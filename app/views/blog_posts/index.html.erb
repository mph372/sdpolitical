</div>

<div class="container-fluid py-4" style="background-color: #d8e6f3; border-top: 1px dashed #446484; border-bottom: 1px dashed #446484;">
  <div class="container">
    <div class="row">
      <h5><strong>Recent Blog Updates</strong></h5>
      <% @recent_blog_posts.each do |post| %>
          <div class="row">
              <div class="col-lg-3 text-nowrap">
                  <%= post.publish_date.strftime('%A, %B %d, %Y') %>
              </div>
              <div class="col-lg-9 text-nowrap">
                  <%= link_to post.title, blog_post_path(post) %>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-8">
      <% @blog_posts.each do |post| %>
        <div class="row mb-4">
          <div class="col-md-12">
            <h2 class="font-weight-bold" style="margin-bottom: 0; line-height: 1.2;"> <%= link_to post.title, blog_post_path(post) %></h2>
            <span style="display: block; margin-top: 0; font-size: smaller; color: gray;"><%= post.publish_date.strftime('%A, %B %d, %Y') %></span>
            <div class="">
              <%= post.excerpt %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= render 'blog_posts/sidebar' %><!-- Rendered once outside the loop -->
    </div>
  </div>
</div>

  <div class="card shadow-sm mb-3 bg-white rounded primary-border " style="max-width: 100%;">
    <div class="card-header">
      Campaign Finance Limits <%if user_signed_in? && current_user.admin? %><span class="float-end"> <%= link_to 'Edit', edit_campaign_finance_module_path(district) %> </span><%end%>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
          Contribution Limit:
          <div class="green-text heavy float-end">
            <div class="green-text heavy float-end"><strong><%if district.contribution_limit == 0 || district.contribution_limit == nil %>No Limit<%else%>$<%= number_with_delimiter(district.contribution_limit, delimiter: ",") %><%end%>
          </strong></div></li>
      <li class="list-group-item">Corporate Contributions:
          <% if district.corporate?%>
          <div class="green-text float-end"> Allowed
          <%else%>
          <div class="gop-text heavy float-end"> Prohibited
          <%end%></li>
      <li class="list-group-item">PAC Contributions:
          <% if district.pac?%>
          <div class="green-text float-end">Allowed
          <%else%>
          <div class="gop-text heavy float-end">Prohibited
          <%end%></li>
      <li class="list-group-item">
          <% if district.party?%>
          Party Contribution Limit:
          <div class="green-text heavy float-end"><strong><%if district.party_limit == 0 || district.party_limit == nil %>No Limit<%else%>$<%= number_with_delimiter(district.party_limit, delimiter: ",") %><%end%></strong>
          <%else%>
          Party Contributions:
         <div class="gop-text font-size-12 float-end"><%= material_icon.cancel %>
          <%end%></li></li>
    </ul>
  </div> 
<h3>Candidates</h3>
<table>
<thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Party</th>
      <th>Profession</th>
      <th>Age</th>
      <th>Campaign Website</th>
      <th>Cash on Hand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
      <tr>
      <% if @district.incumbent.running_reelection? %>
        <td><%= @district.incumbent.first_name %></td>
        <td><%= @district.incumbent.last_name %></td>
        <td><%= @district.incumbent.party %></td>
        <td><%= @district.incumbent.professional_career %></td>
        <td>Age <%= @district.incumbent.calculated_age %></td>
        <td><%= link_to @district.incumbent.campaign_website %></td>
      </tr>
    <% end %>
  

  
    <% @district.candidates.each do |candidate| %>
    <tr>
      <% if candidate.on_ballot? %>
        <% report = candidate.reports.most_recent %>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.party %></td>
        <td><%= candidate.professional_career %></td>
        <td>Age <%= candidate.calculated_age %></td>
        <td><%= link_to candidate.campaign_website %></td>
        <td>$<%= number_with_delimiter(report&.current_coh, :delimiter => ',') %></td>
        <% end %>
    <% end %>
    </tr>
  </tbody>
</table>


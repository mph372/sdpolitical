<p id="notice"><%= notice %></p>

<h1>Contributors</h1>

<table>
  <thead>
    <tr>
      <th>Transactions</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Donations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  Transaction.select('contributor_id, sum(amount) as total').group('contributor_id').order('total desc').each do |transaction| %>
      <tr>
        <%if transaction.contributor.present?%>
        <td><% if transaction.contributor.present? %><%= transaction.contributor.transactions.count %><%else%>0<%end%></td>
        <td><%= transaction.contributor.first_name %></td>
        <td><%= transaction.contributor.last_name %></td>
        <td><%= number_to_currency(transaction.total) %></td>
        <td><%= link_to 'Show', transaction.contributor %></td>
        <td><%= link_to 'Edit', edit_contributor_path(transaction.contributor) %></td>
        <td><%= link_to 'Destroy', transaction.contributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


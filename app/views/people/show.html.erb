    <% if @person.candidate_committees.any? %>
      <%= render 'affiliated_committees', person: @person %>
    <% end %>

    
    <%= render 'incumbentsection'%>
    <%= render 'admin'%>
  </div>
</div> <!-- End of wrapper -->


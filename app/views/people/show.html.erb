
<div class="container bg-white">
  <div class="row ">
    <div class="col">
      <div class="col">
        <%= render 'shared/incumbent', person: @person, page_source: 'person' %>
      </div>
    </div> 
    <br>
    
    <% if @person.candidates.present? %>
      <div class=" mb-3 bg-white  ">
        <%= render 'campaignsection'%>
      </div>

<%if @person.candidates.present? %>
    <div class="row">
      <% if @person.campaign.district.at_large_district == false %>
      <%= render partial: 'shared/candidates', locals: {district: @person.campaign.district, candidates: @person.opponents, campaign: @person.campaign} %>
      <%else%>
       <%= render partial: 'shared/candidates', locals: {district: @person.campaign.district, candidates: @person.campaign.district.jurisdiction.candidates, campaign: @person.campaign.district.jurisdiction.campaigns.active.last} %>
      <%end%>
    </div>
<%end%>



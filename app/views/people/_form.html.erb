<%= bootstrap_form_for(@person) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.date_select :birthdate %>
  <%= f.select :party, ['Republican', 'Democrat', 'Declined to State', 'Green', 'Peace & Freedom', 'Libertarian', 'Reform', 'Natural Law', 'American Independent', 'Unknown'], :include_blank => true %>
  <%= f.check_box :is_incumbent, id:'incumbentOffice' %>
  <%= f.select(:incumbent_district, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.id ] }, {:include_blank => true, }, id:'incumbentOfficePicker', :disabled => true ) %>
  <br>
  <%= f.form_group  label: { text: "Election Status" }, help: "Optional Help Text" do %>
    <%= f.check_box  :on_ballot,  label: "Running for non-incumbent office", id:"runningFor"%>
    <%= f.check_box  :running_reelection,  label: "Running for re-election", id:'reElection', :disabled => true%>
  <% end %>
  <%= f.select(:district_id, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.id ] }, {label: "Running for:", :include_blank => true}, :disabled => true, id:"runningForPicker") %>
  <%= f.date_select :first_elected, include_blank: true,  :discard_day => true, start_year: 1990, :order => [:month, :year], end_year: Date.today.year %>
  <%= f.text_field :prior_elected, { text: "Prior Elected Office" } %>
  <%= f.number_field :salary %>
  <%= f.text_field :professional_career %>
  <%= f.number_field :congressional_district %>
  <%= f.number_field :assembly_district %>
  <%= f.number_field :senate_district %>
  <%= f.number_field :supe_district %>
  <%= f.text_field :birthplace %>
  <%= f.email_field :email %>
  <%= f.text_field :twitter %>
  <%= f.text_field :facebook %>
  <%= f.text_field :phone %>
  <%= f.number_field :term, { text: "Term Limit Year" } %>
  <%= f.file_field :image, { text: "Headshot" } %>
  <%= f.number_field :term_expires, { text: "Current Term Expires" } %>
  <%= f.text_field :official_website %>
  <%= f.text_field :campaign_website %>
  <%= f.submit %>
<% end %>
<br>


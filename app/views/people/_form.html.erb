<%= bootstrap_form_for(@person) do |f| %>
  <%= f.text_field :first_name %>
  <%= f.text_field :title %>
  <%= f.check_box :on_ballot %>
  <%= f.submit "Log In" %>
<% end %>

<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :on_ballot, "Running for Other Office" %>
    <%= form.check_box :on_ballot %>
  </div>

   <div class="field">
    <%= form.label :running_reelection, "Running for this office" %>
    <%= form.check_box :running_reelection %>
  </div>

  <div class="field">
    <%= form.label :district_id, "Candidate for:" %>
    <%= form.select(:district_id, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.id ] }, {}, { "data-placeholder": "Select District" }) %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, :order => [:month, :day, :year], start_year: 1930, end_year: Date.today.year - 18, use_month_numbers: true %>
  </div>

  <div class="field">
    <%= form.label :party %>
    <%= form.select :party, ['Republican', 'Democrat', 'Declined to State', 'Green', 'Peace & Freedom', 'Libertarian', 'Reform', 'Natural Law', 'American Independent', 'Unknown'], :include_blank => true %>
  </div>
  
  <div class="field">
    <%= form.label :first_elected %>
    <%= form.date_select :first_elected, include_blank: true,  :discard_day => true, start_year: 1990, :order => [:month, :year], end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= form.label :prior_elected %>
    <%= form.text_field :prior_elected %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary %>
  </div>

  <div class="field">
    <%= form.label :professional_career %>
    <%= form.text_field :professional_career %>
  </div>

  <div class="field">
    <%= form.label :congressional_district %>
    <%= form.number_field :congressional_district %>
  </div>

  <div class="field">
    <%= form.label :assembly_district %>
    <%= form.number_field :assembly_district %>
  </div>

  <div class="field">
    <%= form.label :senate_district %>
    <%= form.number_field :senate_district %>
  </div>

  <div class="field">
    <%= form.label :supe_district %>
    <%= form.number_field :supe_district %>
  </div>

  <div class="field">
    <%= form.label :birthplace %>
    <%= form.text_field :birthplace %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :twitter %>
    <%= form.text_field :twitter %>
  </div>

  <div class="field">
    <%= form.label :facebook %>
    <%= form.text_field :facebook %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :term %>
    <%= form.number_field :term %>
  </div>



  <div class="field">
    <%= form.label :image, "Headshot" %>
    <%= form.file_field :image %>
  </div> 

  <div class="field">
    <%= form.label :term_expires %>
    <%= form.number_field :term_expires %>
  </div>

  <div class="field">
    <%= form.label :seeking_office %>
    <%= form.number_field :seeking_office %>
  </div>

  <div class="field">
    <%= form.label :official_website %>
    <%= form.text_field :official_website %>
  </div>

  <div class="field">
    <%= form.label :campaign_website %>
    <%= form.text_field :campaign_website %>
  </div>

  <div class="field">
    <%= form.label :is_incumbent %>
    <%= form.check_box :is_incumbent %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

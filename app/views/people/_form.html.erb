<br>
<%= bootstrap_form_for(@person) do |f| %>
<div class="candidate-table">
  <h5>For Candidates & Incumbents:</h5>
  <br>
  

    <div class="row">
      <div class="col">
      Incumbent Status <br>
        <%= f.check_box :is_incumbent, id:'incumbentOffice' %>
        <br>
        <%= f.select(:incumbent_district, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.incumbent_id ] }, {:include_blank => true, }, id:'incumbentOfficePicker', :disabled => true ) %>
    </div>
    <div class="col">
        <%= f.form_group  label: { text: "Election Status" } do %>
        <%= f.check_box  :on_ballot,  label: "Running for non-incumbent office", id:"runningFor"%>
        <%= f.check_box  :running_reelection,  label: "Running for re-election", id:'reElection', :disabled => true%>
        <% end %>
        <%= f.select(:district_id, District.all.collect { |v| [ "#{v.jurisdiction.name} - #{v.name} (District #{v.district})", v.id ] }, {:include_blank => true}, :disabled => true, id:"runningForPicker", label: "Running for:") %>
    </div>
  </div>
  <hr> 
  <div class="row">
    <div class="col">
    <%= f.text_field :first_name %>
    </div>
    <div class="col">
    <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.date_select :birthdate, start_year: 1930, end_year: 2002 %>
    </div>
    <div class="col">
      <%= f.select :party, ['Republican', 'Democrat', 'Declined to State', 'Green', 'Peace & Freedom', 'Libertarian', 'Reform', 'Natural Law', 'American Independent', 'Unknown'], :include_blank => true %>
    </div>
    <div class="col">
      <%= f.form_group  label: { text: "Party Endorsement" } do %>
      <%= f.check_box :endorsed_republican, label: "Endorsed Republican" %>
      <%= f.check_box :endorsed_democrat, label: "Endorsed Democrat" %>
      <%end%>
    </div>    
  </div>
    <div class="row">
    <div class="col">
      <%= f.text_field :professional_career %>
    </div>
    <div class="col">
    <%= f.text_field :campaign_website %>    </div>
  </div>
 <hr>
 <h5>For Incumbents:</h5>
 <br>
 <div class="row">
    <div class="col-auto">
      <%= f.date_select :first_elected, include_blank: true,  :discard_day => true, start_year: 1990, :order => [:month, :year], end_year: Date.today.year %>
    </div>
    <div class="col">
      <%= f.text_field :prior_elected, { label: "Prior Elected Office(s) Held" } %>
    </div>
  </div>
 <br>
   <div class="row">
    <div class="col">
      <%= f.text_field :title %>    </div>
    <div class="col">
      <%= f.number_field :salary %>    </div>
    </div>
  </div>
 <br>
  <div class="row">
    <div class="col">
      <%= f.number_field :congressional_district %>   
    </div>
    <div class="col">
      <%= f.collection_select(:senate_district, District.all.where(name: "State Senate"), :id, :district, prompt: "Select a district", :include_blank => true ) %>   
    </div>
    <div class="col">
      <%= f.number_field :assembly_district %>   
    </div>
    <div class="col">
     <%= f.number_field :supe_district %>   
    </div>
  </div>
 <br>
  <div class="row">
    <div class="col">
      <%= f.file_field :image, { label: "Headshot" } %>    
      </div>
    <div class="col">
      <%= f.text_field :birthplace %>  
      </div>
  </div>
   <br>
  <div class="row">
    <div class="col">
      <%= f.email_field :email %>  
    </div>
    <div class="col">
      <%= f.text_field :phone %>
    </div>
    <div class="col">
      <%= f.text_field :twitter %> 
    </div>
    <div class="col">
      <%= f.text_field :facebook %>
    </div>
  </div>
 <br>  
    <div class="row">
    <div class="col">
      <%= f.number_field :term, { label: "Term Limit Year" } %>   
      </div>
    <div class="col">
      <%= f.number_field :term_expires, { label: "Current Term Expires" } %> 
      </div>
          <div class="col">
      <%= f.text_field :official_website %>
      </div>
  </div>

  
   <br>
  
  <%= f.submit %>
<% end %>
<br>


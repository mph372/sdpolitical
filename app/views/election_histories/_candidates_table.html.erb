<div class="table-responsive p-2 mt-4">
    <table class="table bg-white" style="width:100%">
      <thead class="thead-light rounded">
        <tr>
          <th>Name</th>
          <th>Vote Count</th>
          <th>Vote Percent</th>
        </tr>
      </thead>
      
      <tbody>
      <% @election_history.historical_candidates.each do |candidate| %>
        <tr>
          <td>
          <% if candidate.person.present? %> <%= link_to "#{candidate.person.first_name} #{candidate.person.last_name}", candidate.person %>
          <%else%>
          <%= "#{candidate.first_name} #{candidate.last_name}" %>
          <%end%></td>
          <td><%= number_with_delimiter(candidate.votes, :delimiter => ',') %></td>
          <td>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= candidate.vote_share %>;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= candidate.vote_share %></div>
          </div>
          </td>
        </tr>
       
        
      <% end %>
    </tbody>
    </table>
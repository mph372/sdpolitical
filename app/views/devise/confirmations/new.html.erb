<div class="container">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6 mt-4 p-0 bg-white shadow border border-primary" style="width: 100%;">
          <div class="primary-header p-2">
      <h4 class="m-1">Resend confirmation instructions</h4>
      </div>
      <div class="m-2 p-3">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Resend confirmation instructions", :class => "btn btn-primary" %>
      </div>
      <%end%>
      <br>
      <%= render "devise/shared/links" %>
      </div>
      </div>
      <div class="col-sm-3">
      </div>
    </div>
</div>

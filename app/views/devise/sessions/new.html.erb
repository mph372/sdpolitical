<div class="container">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6 mt-4 p-0 bg-white shadow border border-primary">
      <div class="primary-header p-3">
        <h4 class="m-0">Login</h4>
      </div>
      
      <div class="p-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs mb-4">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mb-4">
            <%= f.button :submit, "Login", class: "btn btn-primary" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>
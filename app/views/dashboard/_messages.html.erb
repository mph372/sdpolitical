<div class="card shadow-sm mb-3 bg-white rounded primary-border" style="max-width: 100%;">
      <div class="card-header mb-3">
        Latest Updates
      </div>
      <% if @updates.present? %>
            <% @updates.order('created_at DESC').each do |update| %>
           <div class="container px-4">
            <div class="row">
                <div class="col">
                    <h5 class="heavy"><%= update.title %></h5>
                </div>
                <div class="col">
                    <span class="float-end"><%= update.created_at.strftime("%m/%d/%y at %I:%M%p") %></span>
                </div>
            </div>
            <div class="row">
            <div class="col">
                <p><%= update.message %> </p>
                </div>
                
            </div>
            <hr>
            </div>
            
            <%end%>
        <%else%>
        <div class="row">
        </div>
        <p class="px-3">No recent updates.</p>
        <%end%>
</div>
<div class="card shadow-sm mb-3 bg-white rounded primary-border" style="max-width: 100%;">
      <div class="card-header">
        Upcoming Deadlines
      </div>
    <div class="table-responsive p-3">
      <table CLASS="table">

        <tbody>
            <% @deadlines.each do |deadline| %>
            <%if deadline.deadline_date.past? == false%>
            <tr>
                    <td><strong><%= deadline.title %></strong><br><small><%= deadline.description %> </small></td>
                    <td class="text-nowrap"><%=deadline.deadline_date.strftime("%b %-d") %></td>
            </tr>
            <%end%>
            <%end%>
        </tbody>
        </table>
        </div>
      </div>
    
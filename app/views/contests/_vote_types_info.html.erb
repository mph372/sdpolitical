<%# app/views/contests/_vote_types_info.html.erb %>
<div class="card shadow-sm mb-4">
  <div class="card-header bg-light">
    <h5 class="card-title mb-0">
      <i class="bi bi-info-circle me-2"></i>Understanding Vote Types
    </h5>
  </div>
  <div class="card-body">
    <div class="row g-4">
      <div class="col-md-4">
        <h6 class="d-flex align-items-center">
          <i class="bi bi-calendar-check me-2 text-primary"></i>
          Early Vote
        </h6>
        <p class="text-muted small mb-0">
          Includes mail ballots received before Election Day and vote center ballots from early voting between Feb. 24 and March 4.
        </p>
      </div>
      <div class="col-md-4">
        <h6 class="d-flex align-items-center">
          <i class="bi bi-calendar-event me-2 text-success"></i>
          Election Day Vote
        </h6>
        <p class="text-muted small mb-0">
          Consists solely of vote center ballots cast on Election Day.
        </p>
      </div>
      <div class="col-md-4">
        <h6 class="d-flex align-items-center">
          <i class="bi bi-envelope me-2 text-warning"></i>
          Late Vote
        </h6>
        <p class="text-muted small mb-0">
          Comprises mail ballots collected at vote centers, official ballot drop boxes, or by the U.S. Postal Service on Election Day. Includes provisional ballots and late-arriving mail ballots postmarked by Election Day.
        </p>
      </div>
    </div>
  </div>
</div>
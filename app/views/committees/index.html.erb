<p id="notice"><%= notice %></p>

<h1>Committees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Jurisdiction</th>
      <th>Type</th>
      <th>Candidate</th>
      <th>Measure</th>
      <th>Support</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td><%= committee.jurisdiction %></td>
        <td><%= committee.committee_type %></td>
        <td><%= committee.person %></td>
        <td><%= committee.measure %></td>
        <td><%= committee.support %></td>
        <td><%= committee.is_active %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


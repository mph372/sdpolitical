
<%= bootstrap_form_for(@committee, label_errors: true) do |f| %>

<%= f.text_field :name, label: "Commitee Name" %>

<div class="row">
  <div class="col">
    <%= f.select(:jurisdiction_id, Jurisdiction.all.collect { |v| [ "#{v.name}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Jurisdiction" }) %>
  </div>  
  <div class="col">
    <%= f.select :committee_type, ['General Purpose', 'Primarily Formed'], :include_blank => true %>
  </div>    
</div>

<div class="row">
  <div class="col">
    <%= f.select(:person_id, Person.all.collect { |v| [ "#{v.last_name}, #{v.first_name}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Candidate" }) %>
  </div>
  <div class="col">
    <%= f.select(:measure_id, Measure.all.collect { |v| [ "Measure #{v.letter}", v.id ] }, {:include_blank => true}, { "data-placeholder": "Select Measure" }) %>
  </div>  
  <div class="col">
    <%= f.form_group :support, label: { text: "Support or Oppose" }  do %>
    <%= f.radio_button :support, "Support" %> 
    <%= f.radio_button :support, "Oppose" %> 
    <%end%>
  </div>     
</div>
<%= f.check_box :is_active %>
<br>
<%= f.submit %>

<%end%>

<br>